<Project Sdk="Microsoft.NET.Sdk">

  <ItemGroup>
    <ProjectReference Include="..\LibplanetConsole.Clients\LibplanetConsole.Clients.csproj" />
    <ProjectReference Include="..\LibplanetConsole.Clients.Examples\LibplanetConsole.Clients.Examples.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Serilog.Sinks.Console" Version="3.1.1" />
  </ItemGroup>

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <AssemblyName>libplanet-client</AssemblyName>
    <PublishSingleFile>true</PublishSingleFile>
    <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
    <PlatformTarget Condition="'$(OS)'=='Windows_NT' And '$(NETCoreSdkPortableRuntimeIdentifier)'=='win-arm64'">x64</PlatformTarget>
  </PropertyGroup>

</Project>
