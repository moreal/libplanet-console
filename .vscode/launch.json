{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: Libplanet Console",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/LibplanetConsole.Executable/bin/Debug/net8.0/libplanet-console.dll",
            "console": "integratedTerminal",
            "args": [
                "--node-count",
                "4",
                "--client-count",
                "4"
            ],
            "env": {
                "LIBPLANET_CONSOLE_WORKSPACE_PATH": "${workspaceFolder}"
            }
        },
        {
            "name": "C#: Libplanet Node",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/LibplanetConsole.NodeHost/bin/Debug/net8.0/libplanet-node.dll",
            "console": "integratedTerminal",
            "args": [
                "--end-point",
                "127.0.0.1:5353",
                "-a"
            ]
        },
        {
            "name": "C#: Libplanet Node with Seed EndPoint",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/LibplanetConsole.NodeHost/bin/Debug/net8.0/libplanet-node.dll",
            "console": "integratedTerminal",
            "args": [
                "-a",
                "--seed-end-point",
                "127.0.0.1:5353"
            ]
        },
        {
            "name": "C#: Libplanet Client",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/LibplanetConsole.ClientHost/bin/Debug/net8.0/libplanet-client.dll",
            "console": "integratedTerminal",
            "args": [
                "--seed-end-point",
                "127.0.0.1:5353"
            ]
        }
    ]
}